# Targets a monitorear (separados por espacios)
TARGETS="https://google.com https://github.com"

# Intervalo entre checks (segundos)
CHECK_INTERVAL=60

# Servidor DNS para verificaciones
DNS_SERVER="8.8.8.8"

# Número de veces que el health-check intentará conectarse antes de fallar.
RETRIES=5

# Segundos de espera entre cada reintento del health-check.
WAIT_SECONDS=3

# Tiempo de espera para las conexiones mediante netcat
TIMEOUT_NC=5

# Versión del release para el empaquetado (ej. make pack).
RELEASE="1.0.0"

# URL por defecto para el target `make run`.
URL="https://github.com"

# Host por defecto para el target `make health-check`.
HEALTH_HOST="localhost"

# Puerto por defecto para el target `make health-check`.
HEALTH_PORT=80
